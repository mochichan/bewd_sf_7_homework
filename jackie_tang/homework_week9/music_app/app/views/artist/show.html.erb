<h1><%=@artist.name %></h1>
<p><%= @artist.description %></p>

<%= link_to 'Edit Artist', edit_artist_path %>


<%= link_to 'Destroy', artist_path(@artist),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

<p>Songs by <%=@artist.name %></p>

<ul>
 	<% @songs.each do |song|%>
	<li><%= link_to song.title, song_path(song.id) %> | <%= song.year%> </li>
	<% end %>
</ul>

<%= link_to "Add Song", new_song_path %> 

<%= link_to 'Back', record_label_index_path %>

